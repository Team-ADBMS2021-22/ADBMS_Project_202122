<%- include('layout/header.ejs') %>
<link rel="stylesheet" href="css/employee.css">
</head>
<body>
    <%- include('layout/navbar.ejs') %>
    <div class="login">
        <form action="/updated" method="POST">
            <div class="login__inputs">
                <input type="text" placeholder="ID" class="login__input" name="_id" required>
                <input type="text" placeholder="Name" class="login__input" name="name" required>
                <div class="login__time">
                    <label for="login" class="login__label">Login</label>
                    <input type="time" class="login__input" name="login" required>
                    <label for="signout" class="login__label">Signout</label>
                    <input type="time" class="login__input" name="signout" required>
                </div>
                <input type="text" placeholder="Work Completed" class="login__input" name="work" required>
            </div>
            <div class="login__statusInfo">
                <label for="status">Status</label>
                <div class="login__status">
                    <button type="submit" value="login">Submit</button>
                    <!-- <button type="submit" value="signout">Sign Out</button> -->
                </div>
            </div>
        </form>
    </div>
    <%- include('layout/footer.ejs') %>
</body>
</html>